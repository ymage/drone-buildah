FROM fedora

RUN dnf -y install \
    make \
    golang \
    bats \
    btrfs-progs-devel \
    device-mapper-devel \
    glib2-devel \
    gpgme-devel \
    libassuan-devel \
    libseccomp-devel \
    git \
    bzip2 \
    go-md2man \
    runc \
    containers-common \
    skopeo-containers

# Workaround - the first install somehow leaves the golang in a bad state
RUN dnf -y install golang

RUN mkdir /root/buildah && \
    cd /root/buildah && \
    git clone https://github.com/harness/buildah.git ./src/github.com/containers/buildah

RUN cd /root/buildah/src/github.com/containers/buildah && make && sudo make install



FROM quay.io/buildah/stable:v1.37.5

USER build
WORKDIR /home/build
RUN export STORAGE_DRIVER=vfs
COPY --from=0 /root/buildah/src/github.com/containers/buildah/bin/. /bin/

# Add plugin binary
ADD release/linux/amd64/buildah-docker /bin/
ADD release/linux/amd64/buildah-ecr /bin/
ENTRYPOINT ["/bin/buildah-ecr"]
